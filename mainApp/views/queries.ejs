<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Queries</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1>Queries</h1>
        <nav>
            <a href="/">Home</a>
            <% if (typeof user !== 'undefined' && user) { %>
                <a href="/users/profile">Profile</a>
                <a href="/users/logout">Logout</a>
            <% } else { %>
                <a href="/users/login">Login</a>
                <a href="/users/register">Register</a>
            <% } %>
        </nav>
    </header>
    
    <main>
        <section>
            <h2>Queries</h2>
            <% if (typeof queries !== 'undefined' && queries.length === 0) { %>
                <p>No queries available.</p>
            <% } else { %>
                <ul>
                    <% queries.forEach(query => { %>
                        <li>
                            <h3><%= query.title %></h3>
                            <p><%= query.description %></p>
                            <p>Submitted by: <%= query.author %></p>
                            <p>Support Count: <%= query.supportCount %></p>
                            <p>Opposition Count: <%= query.oppositionCount %></p>
                            
                            <% if (typeof user !== 'undefined' && user) { %>
                                <form action="/queries/support/<%= query._id %>" method="POST">
                                    <button type="submit" <% if (query.supportUsers.includes(user._id)) { %> disabled <% } %>>Support</button>
                                </form>
                                <form action="/queries/opposition/<%= query._id %>" method="POST">
                                    <button type="submit" <% if (query.oppositionUsers.includes(user._id)) { %> disabled <% } %>>Oppose</button>
                                </form>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </section>

        <section>
            <h2>Add New Query</h2>
            <% if (typeof user !== 'undefined' && user) { %>
                <form action="/queries/save" method="POST">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="4" required></textarea>
                    <button type="submit">Submit</button>
                </form>
            <% } else { %>
                <p>Please <a href="/users/login">log in</a> to add a new query.</p>
            <% } %>
        </section>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Query Management System</p>
    </footer>
</body>
</html>

