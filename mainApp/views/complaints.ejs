<!DOCTYPE html>
<html>
  <head>
    <title>Complaints</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <h1>Complaints</h1>
      <a class="btn btn-primary" href="/complaints/add">Add Complaints</a>
      <div class="row">
        <% complaints.forEach(function(complaint) { %>
          <div class="card" style="width: 20rem; margin: 8px;">
            <div class="card-body">
              <h5 class="card-title"><%= complaint.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= complaint.author %></h6>
              <p class="card-text"><%= complaint.description %></p>
              <h6 class="card-subtitle mb-2 text-muted">Genre: <%= complaint.genre %></h6>
              <p>Supports: <%= complaint.supportCount %></p>
              <p>Oppositions: <%= complaint.oppositionCount %></p>
              <form action="/complaints/support/<%= complaint._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-success">Support</button>
              </form>
              <form action="/complaints/opposition/<%= complaint._id %>" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger">Oppose</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-GLhlTQ2M73KcpCQmM6PC9a/2McG4J+U7B2mHcbAk7eNR5cHb3gF68tWZHpz9+1sH" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-b4gt3jrD8f6A1LOs+6WoXyyjIQgVd1GVc9zt9y5eVv1FtfV9P1oK7W80T7h91I0G" crossorigin="anonymous"></script>
  </body>
</html>
